# =============================================================================
# GALVESTON RESERVATION SYSTEM - PRODUCTION CONFIGURATION
# =============================================================================
# This file contains all key settings for the Galveston rental booking system.
# Update these values for your specific setup.

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this
APP_URL=https://str.ptpsystem.com
DOMAIN_NAME=str.ptpsystem.com

# =============================================================================
# GOOGLE CALENDAR INTEGRATION
# =============================================================================
GOOGLE_CREDENTIALS_PATH=/run/secrets/service-account.json
GOOGLE_CALENDAR_ID=livingbayfront@gmail.com

# =============================================================================
# PROPERTY MANAGEMENT
# =============================================================================
PROPERTY_MANAGEMENT_URL=https://www.galvestonislandresortrentals.com/galveston-vacation-rentals/bayfront-retreat
PROPERTY_NAME=Bayfront Retreat
PROPERTY_LOCATION=Galveston, Texas
MAX_GUESTS=10

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Who approves booking requests (receives approval/rejection emails)
BOOKING_APPROVAL_EMAIL=livingbayfront@gmail.com

# Who gets notified of new booking requests (comma-separated for multiple)
BOOKING_NOTIFICATION_EMAILS=livingbayfront@gmail.com

# Administrative contact email
ADMIN_EMAIL=livingbayfront@gmail.com

# System email sender
SYSTEM_EMAIL_SENDER=livingbayfront@gmail.com

# SMTP Configuration (for sending emails)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# =============================================================================
# BOOKING SETTINGS
# =============================================================================
BOOKING_ADVANCE_DAYS=365
MIN_STAY_NIGHTS=2
MAX_STAY_NIGHTS=30

# =============================================================================
# CALENDAR SYNC SETTINGS
# =============================================================================
CALENDAR_SYNC_MONTHS_AHEAD=6
CALENDAR_SYNC_INTERVAL_HOURS=2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+psycopg2://app:app_pass@db:5432/galveston

# =============================================================================
# SECURITY TOKENS
# =============================================================================
APPROVAL_TOKEN_SECRET=replace-me-token
TOKEN_EXPIRATION_HOURS=48
